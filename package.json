{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "shopify-ai",
  "title": "Shopify AI",
  "description": "Query Shopify AI model directly from Raycast",
  "icon": "shopify-favicon.png",
  "author": "your-name",
  "categories": [
    "Productivity",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Ask Shopify AI",
      "description": "Ask a question to Shopify AI",
      "mode": "view",
      "arguments": [
        {
          "name": "query",
          "placeholder": "Your prompt",
          "type": "text",
          "required": false
        }
      ]
    }
  ],
  "preferences": [
    {
      "name": "shopifyApiKey",
      "title": "Shopify API Key",
      "description": "Your Shopify AI API key",
      "type": "password",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.96.0",
    "openai": "^4.96.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
